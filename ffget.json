{
    "name": "ffget",
    "desc": "An AO3 client written in Go",
    "flags": [
        {
            "sh": "v",
            "lh": "version",
            "required": false,
            "help": "Shows the current FFGet version",
            "type": "bool"
        },
        {
            "sh": "d",
            "lh": "download",
            "required": false,
            "help": "Download a fanfiction from the given url",
            "type": "?",
            "default": "none",
            "options": [
                "azw3",
                "epub",
                "mobi",
                "pdf",
                "html"
            ]
        },
        {
            "sh": "i",
            "lh": "info",
            "required": false,
            "help": "Gets the title, description, etc from fanfiction from the given url",
            "type": "bool"
        }
    ]
}
